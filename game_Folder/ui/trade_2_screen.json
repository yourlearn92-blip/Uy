{
  "namespace": "trade2",
  
  "trade_background": {
    "type": "panel",
    "size": [ "100%", "100%" ],
    "controls": [
      {
        "background_color": {
          "type": "image",
          "size": [ "100%", "100%" ],
          "texture": "textures/ui/White",
          "color": "$color_cyan",
          "alpha": "$glass_alpha",
          "layer": 1
        }
      },
      {
        "background_border": {
          "type": "image",
          "size": [ "100%", "100%" ],
          "texture": "textures/gui/client/btn_border",
          "nineslice_size": "$button_nineslice",
          "alpha": 1.0,
          "layer": 2
        }
      }
    ]
  },

  "trade_screen@common.base_screen": {
    "modifications": [
      {
        "control_name": "screen_bg_content",
        "operation": "replace",
        "value": {
          "type": "panel",
          "controls": [
            { "bg@trade2.trade_background": {} }
          ]
        }
      }
    ]
  },

  "tier_stack_panel": {
    "modifications": [
      {
        "array_name": "bindings",
        "operation": "remove",
        "where": { "binding_name": "#tier_visible" }
      }
    ]
  },
  "hover_button": {
    "modifications": [
      {
        "array_name": "bindings",
        "operation": "remove",
        "where": { "binding_name": "(not #using_touch)" }
      }
    ]
  },
  "top_half_stack_panel/how_to_play_button_holder": {
    "modifications": [
      {
        "control_name": "how_to_play_button",
        "operation": "remove"
      },
      {
        "array_name": "controls",
        "operation": "insert_back",
        "value": [
          {
            "quick_trade_button@bt_quick_crafting.quick_trade_button": {
              "anchor_to": "right_middle",
              "anchor_from": "right_middle"
            }
          }
        ]
      }
    ]
  },
  "trade_icons@trade2.toggle_content": {
    "offset": [ 0, 4 ],
    "$template_toggle": "trade2.toggle_content",
    "layer": 11
  },
  "trade_toggle_holder": {
    "size": [ "100%", "60%c - 1px" ],
    "modifications": [
      {
        "array_name": "controls",
        "operation": "insert_back",
        "value": [
          {
            "trade_icons@trade2.trade_icons": {
              "anchor_to": "top_middle",
              "anchor_from": "top_middle"
            }
          }
        ]
      }
    ]
  }
}