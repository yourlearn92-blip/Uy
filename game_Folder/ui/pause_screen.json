{
  "namespace": "pause",

  "pause_screen_content": {
    "type": "panel",
    "controls": [
      {
        "pause_stack": {
          "type": "stack_panel",
          "size": [ 160, "100%c" ],
          "anchor_from": "center",
          "anchor_to": "center",
          "layer": 5,
          "controls": [
            {
              "title_panel": {
                "type": "panel",
                "size": [ "100%", 25 ],
                "controls": [
                  {
                    "game_paused": {
                      "type": "label",
                      "text": "GAME PAUSED",
                      "offset": [ 0, -5 ],
                      "shadow": true,
                      "color": [ 1.0, 1.0, 1.0 ]
                    }
                  }
                ]
              }
            },
            { "res": { "type": "panel", "size": [ "100%", 25 ], "controls": [ { "b@pause.button_template": { "$button_text": "Resume", "$pressed_button_name": "button.pause_resume" } } ] } },
            { "p1": { "type": "panel", "size": [ "100%", 4 ] } },
            { "set": { "type": "panel", "size": [ "100%", 25 ], "controls": [ { "b@pause.button_template": { "$button_text": "Settings", "$pressed_button_name": "button.pause_settings" } } ] } },
            { "p2": { "type": "panel", "size": [ "100%", 4 ] } },
            { "quit": { "type": "panel", "size": [ "100%", 25 ], "controls": [ { "b@pause.button_template": { "$button_text": "Save & Quit", "$pressed_button_name": "button.pause_quit" } } ] } }
          ]
        }
      }
    ]
  },

  "button_template@common_buttons.simple_button": {
    "button_mappings": [
      {
        "from_button_id": "button.menu_select",
        "to_button_id": "$pressed_button_name",
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.menu_ok",
        "to_button_id": "$pressed_button_name",
        "mapping_type": "pressed"
      }
    ]
  },

  "pause_screen@common.base_screen": {
    "$screen_bg_content": "common.empty_panel",
    "$screen_content": "pause.pause_screen_content"
  }
}