{
  "namespace": "pause",

  "pause_btn_row": {
    "type": "panel",
    "size": [ "100%", 25 ],
    "controls": [
      { 
        "b@common_buttons.simple_button": { 
          "size": [ "100%", "100%" ],
          "$button_text": "$button_text"
        } 
      }
    ]
  },

  "pause_screen_content": {
    "type": "panel",
    "controls": [
      {
        "pause_stack": {
          "type": "stack_panel",
          "size": [ 160, "100%c" ],
          "anchor_from": "center",
          "anchor_to": "center",
          "layer": 5,
          "controls": [
            {
              "title_panel": {
                "type": "panel",
                "size": [ "100%", 25 ],
                "controls": [
                  {
                    "game_paused": {
                      "type": "label",
                      "text": "GAME PAUSED",
                      "offset": [ 0, -5 ],
                      "shadow": true,
                      "color": [ 1.0, 1.0, 1.0 ]
                    }
                  }
                ]
              }
            },
            { "res@pause.pause_btn_row": { "$button_text": "Resume", "$pressed_button_name": "button.pause_resume" } },
            { "p1": { "type": "panel", "size": [ "100%", 4 ] } },
            { "set@pause.pause_btn_row": { "$button_text": "Settings", "$pressed_button_name": "button.pause_settings" } },
            { "p2": { "type": "panel", "size": [ "100%", 4 ] } },
            { "quit@pause.pause_btn_row": { "$button_text": "Save & Quit", "$pressed_button_name": "button.pause_quit" } }
          ]
        }
      }
    ]
  },

  "pause_screen@common.base_screen": {
    "$screen_bg_content": "common_buttons.empty_panel",
    "$screen_content": "pause.pause_screen_content"
  }
}