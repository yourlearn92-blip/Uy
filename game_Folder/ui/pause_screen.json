{
  "namespace": "pause",

  // --- CUSTOM NOIR BUTTON STYLE ---
  "noir_button@common.button": {
    "size": [ 160, 25 ],
    "$button_text": "default",
    "controls": [
      { "default": { "type": "image", "texture": "textures/gui/client/btn_default", "color": [ 0, 0, 0 ], "alpha": 0.5, "layer": 1 } },
      { "hover": { "type": "image", "texture": "textures/gui/client/btn_hover", "color": [ 1, 1, 1 ], "alpha": 0.2, "layer": 2 } },
      { "pressed": { "type": "image", "texture": "textures/gui/client/btn_pressed", "color": [ 1, 1, 1 ], "alpha": 0.4, "layer": 3 } },
      { "border": { "type": "image", "texture": "textures/gui/client/btn_hover", "color": [ 1, 1, 1 ], "alpha": 0.5, "size": [ "100% + 2px", "100% + 2px" ], "layer": 0 } },
      { "label": { "type": "label", "text": "$button_text", "layer": 5, "shadow": true } }
    ]
  },

  "pause_screen_content": {
    "type": "panel",
    "controls": [
      {
        "stack": {
          "type": "stack_panel",
          "size": [ 160, "100%c" ],
          "anchor_from": "center",
          "anchor_to": "center",
          "controls": [
            { "title": { "type": "panel", "size": [ "100%", 30 ], "controls": [ { "l": { "type": "label", "text": "GAME PAUSED" } } ] } },
            { "res": { "type": "panel", "size": [ "100%", 25 ], "controls": [ { "b@pause.noir_button": { "$button_text": "Resume", "$pressed_button_name": "button.menu_exit" } } ] } },
            { "sp1": { "type": "panel", "size": [ "100%", 4 ] } },
            { "set": { "type": "panel", "size": [ "100%", 25 ], "controls": [ { "b@pause.noir_button": { "$button_text": "Settings", "$pressed_button_name": "button.menu_settings" } } ] } },
            { "sp2": { "type": "panel", "size": [ "100%", 4 ] } },
            { "quit": { "type": "panel", "size": [ "100%", 25 ], "controls": [ { "b@pause.noir_button": { "$button_text": "Save & Quit", "$pressed_button_name": "button.menu_quit" } } ] } }
          ]
        }
      }
    ]
  },

  "pause_screen@common.base_screen": {
    "is_showing_menu": true,
    "should_steal_mouse": true,
    "controls": [ { "content@pause.pause_screen_content": {} } ]
  }
}}