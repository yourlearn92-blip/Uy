{
  "namespace": "progress",

  "progress_screen_content": {
    "type": "panel",
    "layer": 10,
    "controls": [
      {
        "title_text": {
          "type": "label",
          "text": "#title_text",
          "anchor_from": "center",
          "anchor_to": "center",
          "offset": [ 0, -20 ],
          "color": [ 1.0, 1.0, 1.0 ],
          "shadow": true,
          "bindings": [ { "binding_name": "#title_text" } ]
        }
      },
      {
        "bar": {
          "type": "panel",
          "size": [ 150, 4 ],
          "anchor_from": "center",
          "anchor_to": "center",
          "offset": [ 0, 10 ],
          "controls": [
            { "empty@achievement_wool_screen.empty_progress_bar_icon": { "layer": 1 } },
            { 
              "full@achievement_wool_screen.full_progress_bar_icon": { 
                "layer": 2,
                "bindings": [ 
                  { 
                    "binding_name": "#loading_bar_percentage", 
                    "binding_name_override": "#clip_ratio",
                    "binding_type": "global"
                  } 
                ]
              } 
            }
          ]
        }
      }
    ]
  },

  "progress_screen@common.base_screen": {
    "is_showing_menu": true,
    "should_steal_mouse": true,
    "render_game_behind": false,
    "$screen_bg_content": "common.empty_panel",
    "controls": [
      { 
        "noir_bg": { 
          "type": "image", 
          "texture": "textures/ui/white", 
          "color": [ 0, 0, 0 ], 
          "size": [ "100%", "100%" ], 
          "layer": 1 
        } 
      },
      { "content@progress.progress_screen_content": { } }
    ]
  }
}