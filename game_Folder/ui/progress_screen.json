{
  "namespace": "progress",

  "progress_screen_content": {
    "type": "panel",
    "layer": 10,
    "controls": [
      {
        "title_text": {
          "type": "label",
          "text": "#title_text",
          "anchor_from": "center",
          "anchor_to": "center",
          "offset": [ 0, -20 ],
          "color": [ 1.0, 1.0, 1.0 ],
          "shadow": true,
          "bindings": [ { "binding_name": "#title_text" } ]
        }
      },
      {
        "bar": {
          "type": "panel",
          "size": [ 150, 4 ],
          "anchor_from": "center",
          "anchor_to": "center",
          "offset": [ 0, 10 ],
          "controls": [
            { 
              "empty": { 
                "type": "image",
                "texture": "textures/gui/client/btn_default",
                "size": [ "100%", "100%" ],
                "color": [ 0.3, 0.3, 0.3 ]
              } 
            },
            { 
              "full": { 
                "type": "image",
                "texture": "textures/gui/client/btn_default",
                "size": [ "100%", "100%" ],
                "color": [ 0.0, 0.8, 0.8 ],
                "bindings": [ 
                  { 
                    "binding_name": "#loading_bar_percentage", 
                    "binding_name_override": "#clip_ratio",
                    "binding_type": "global"
                  } 
                ]
              } 
            }
          ]
        }
      }
    ]
  },

  "progress_screen@common.base_screen": {
    "is_showing_menu": true,
    "should_steal_mouse": true,
    "render_game_behind": false,
    "$screen_bg_content": "common.empty_panel",
    "controls": [
      { 
        "noir_bg": { 
          "type": "image", 
          "texture": "textures/ui/white", 
          "color": [ 0, 0, 0 ], 
          "size": [ "100%", "100%" ], 
          "layer": 1 
        } 
      },
      { "content@progress.progress_screen_content": { } }
    ]
  }
}