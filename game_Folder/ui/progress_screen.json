{
  "namespace": "progress",

  "progress_screen_bg": {
    "type": "panel",
    "layer": 1,
    "controls": [
      { "bg": { "type": "image", "texture": "textures/ui/white", "color": [ 0, 0, 0 ], "size": [ "100%", "100%" ] } }
    ]
  },

  "progress_screen@common.base_screen": {
    "is_showing_menu": true,
    "should_steal_mouse": true,
    "$screen_bg_content": "progress.progress_screen_bg",
    "controls": [ 
      { "content@progress.progress_screen_content": { "layer": 10 } } 
    ]
  },

  "progress_screen_content": {
    "type": "panel",
    "controls": [
      {
        "loading_label": {
          "type": "label",
          "text": "#title_text",
          "anchor_from": "center",
          "anchor_to": "center",
          "offset": [ 0, -20 ],
          "color": [ 1.0, 1.0, 1.0 ],
          "bindings": [ { "binding_name": "#title_text" } ]
        }
      },
      {
        "bar_panel": {
          "type": "panel",
          "size": [ 200, 2 ],
          "anchor_from": "center",
          "anchor_to": "center",
          "offset": [ 0, 10 ],
          "controls": [
            { "empty": { "type": "image", "texture": "textures/ui/white", "color": [ 0.2, 0.2, 0.2 ], "size": [ "100%", "100%" ] } },
            {
              "full": {
                "type": "image",
                "texture": "textures/ui/white",
                "color": [ 1, 1, 1 ],
                "size": [ "100%", "100%" ],
                "clip_direction": "left",
                "bindings": [
                  { "binding_name": "#progress_bar_percentage", "binding_name_override": "#clip_ratio" }
                ]
              }
            }
          ]
        }
      }
    ]
  }
}