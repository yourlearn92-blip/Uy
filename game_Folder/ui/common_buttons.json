{
  "namespace": "common_buttons",

  "empty_panel": {
    "type": "panel",
    "size": [ 0, 0 ]
  },

  // --- Modern Noir Overrides ---
  "light_content_button@common.button": {
    "$button_texture": "$button_texture_default",
    "$hover_texture": "$button_texture_hover",
    "$pressed_texture": "$button_texture_pressed",
    "$button_nineslice": "$button_nineslice",
    "$button_color": "$color_main",
    "$hover_color": "$color_main",
    "$pressed_color": "$color_secondary"
  },

  "light_glyph_button@common.button": {
    "$button_texture": "$button_texture_default",
    "$hover_texture": "$button_texture_hover",
    "$pressed_texture": "$button_texture_pressed",
    "$button_nineslice": "$button_nineslice",
    "$button_color": "$color_main",
    "$hover_color": "$color_main",
    "$pressed_color": "$color_secondary"
  },

  // --- Premium Noir Button ---
  "simple_button@common.button": {
    "size": "$button_size",
    "controls": [
      {
        "default": {
          "type": "image",
          "texture": "$button_texture_default",
          "nineslice_size": "$button_nineslice",
          "color": "$color_main",
          "alpha": "$button_alpha_default",
          "layer": 10,
          "size": [ "100%", "100%" ]
        }
      },
      {
        "hover": {
          "type": "image",
          "texture": "$button_texture_hover",
          "nineslice_size": "$button_nineslice",
          "color": "$color_main",
          "alpha": "$button_alpha_hover",
          "layer": 11,
          "size": [ "100%", "100%" ]
        }
      },
      {
        "pressed": {
          "type": "image",
          "texture": "$button_texture_pressed",
          "nineslice_size": "$button_nineslice",
          "color": "$color_secondary",
          "alpha": "$button_alpha_pressed",
          "layer": 12,
          "size": [ "100%", "100%" ]
        }
      },
      {
        "border": {
          "type": "image",
          "texture": "$button_texture_border",
          "nineslice_size": "$button_nineslice",
          "color": "$color_main",
          "layer": 13,
          "size": [ "100%", "100%" ]
        }
      },
      {
        "text_label": {
          "type": "label",
          "text": "$button_text",
          "shadow": true,
          "layer": 15,
          "color": "$color_text_main",
          "anchor_from": "center",
          "anchor_to": "center"
        }
      }
    ]
  },

  // --- Wolf Noir Toggle ---
  "premium_toggle": {
    "type": "toggle",
    "size": [ 44, 24 ],
    "controls": [
      {
        "toggle_bg": {
          "type": "image",
          "texture": "$button_texture_default",
          "color": "$color_secondary",
          "nineslice_size": "$button_nineslice",
          "alpha": 0.5,
          "layer": 20,
          "size": [ "100%", "100%" ]
        }
      },
      {
        "toggle_on_glow": {
          "type": "image",
          "texture": "$button_texture_pressed",
          "color": "$color_main",
          "size": [ "50%", "100%" ],
          "anchor_from": "right_middle",
          "anchor_to": "right_middle",
          "layer": 21,
          "bindings": [
            { "binding_name": "#toggle_state", "binding_name_override": "#visible" }
          ]
        }
      },
      {
        "toggle_border": {
          "type": "image",
          "texture": "$button_texture_border",
          "color": "$color_main",
          "nineslice_size": "$button_nineslice",
          "layer": 22,
          "size": [ "100%", "100%" ]
        }
      }
    ]
  },

  // --- Premium Noir Slider ---
  "premium_slider": {
    "type": "slider",
    "size": [ 120, 16 ],
    "controls": [
      {
        "slider_track": {
          "type": "image",
          "texture": "$button_texture_default",
          "color": "$color_secondary",
          "alpha": 0.4,
          "nineslice_size": "$button_nineslice",
          "layer": 1,
          "size": [ "100%", 8 ]
        }
      },
      {
        "slider_filled": {
          "type": "image",
          "texture": "$button_texture_pressed",
          "color": "$color_main",
          "alpha": 0.8,
          "nineslice_size": "$button_nineslice",
          "layer": 2,
          "size": [ "100%", 8 ]
        }
      },
      {
        "slider_step@common_buttons.simple_button": {
          "size": [ 10, 16 ],
          "$button_text": "",
          "layer": 3
        }
      }
    ]
  },

  "primary_button@common_buttons.simple_button": {
    "$button_alpha_hover": 0.8
  },

  "icon_button@common_buttons.simple_button": {
    "size": [ 32, 32 ],
    "$button_text": ""
  },


  // --- Glass Panel for Settings ---
  "glass_panel": {
    "type": "image",
    "texture": "$button_texture_default",
    "color": "$color_secondary",
    "alpha": "$glass_alpha",
    "nineslice_size": "$button_nineslice",
    "layer": 0
  },

  // --- ENHANCED PREMIUM TOGGLE WITH LABEL SUPPORT ---
  "premium_option_toggle": {
    "type": "stack_panel",
    "orientation": "horizontal",
    "size": [ "100%", "default" ],
    "controls": [
      {
        "label_control": {
          "type": "label",
          "text": "$option_label|default",
          "color": "$color_text_main",
          "shadow": true,
          "size": [ "fill", "default" ]
        }
      },
      {
        "toggle_control@common_buttons.premium_toggle": {
          "bindings": [
            {
              "binding_name": "$option_binding_name|default",
              "binding_name_override": "#toggle_state"
            },
            {
              "binding_name": "$option_enabled_binding_name|default",
              "binding_name_override": "#enabled"
            }
          ]
        }
      }
    ]
  },

  // --- ENHANCED PREMIUM SLIDER WITH LABEL SUPPORT ---
  "premium_option_slider": {
    "type": "stack_panel",
    "orientation": "vertical",
    "size": [ "100%", "default" ],
    "controls": [
      {
        "label_control": {
          "type": "label",
          "text": "$option_label|default",
          "color": "$color_text_main",
          "shadow": true,
          "size": [ "100%", "default" ],
          "bindings": "$label_bindings|default"
        }
      },
      {
        "slider_control@common_buttons.premium_slider": {
          "bindings": [
            {
              "binding_name": "$slider_value_binding_name|default",
              "binding_name_override": "#slider_value"
            },
            {
              "binding_name": "$option_enabled_binding_name|default",
              "binding_name_override": "#enabled"
            },
            {
              "binding_name": "$slider_steps_binding_name|default",
              "binding_name_override": "#slider_steps"
            }
          ]
        }
      }
    ]
  }
}